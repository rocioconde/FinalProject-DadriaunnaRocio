<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_view_meal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/meal_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@+id/checkbox"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            tools:src="@drawable/chickenfinger" />

        <TextView
            android:id="@+id/meal_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/meal_photo"
            android:textSize="20sp"
            tools:text="Baked chicken fingers, white rice, and caesar salad"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/meal_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/meal_description"
            android:layout_toRightOf="@+id/meal_photo"
            tools:text="$ 5.00"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/meal_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/meal_price"
            android:layout_toRightOf="@+id/meal_photo"
            tools:text="700 calories"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/is_vegetarian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/meal_calories"
            android:layout_toRightOf="@+id/meal_photo"
            tools:text="Vegetarian: false"
            android:textSize="18sp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>